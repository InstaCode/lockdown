{
  "name": "lockdown",
  "version": "1.0.0",
  "private": true,
  "description": "Restrict build triggering to a team or individual users",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InstaCode/lockdown.git"
  },
  "keywords": [
    "Repo",
    "Build",
    "Permissions"
  ],
  "author": "InstaCode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InstaCode/lockdown/issues"
  },
  "homepage": "https://github.com/InstaCode/lockdown#readme",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "latest",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-graphql": "^3.1.1",
    "flow-bin": "^0.121.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.31",
    "@typescript-eslint/parser": "^2.25.0",
    "@typescript-eslint/typescript-estree": "^2.25.0",
    "@zeit/ncc": "^0.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.0",
    "jest-circus": "^25.2.1",
    "jest-sonar-reporter": "^2.0.0",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jestSonar": {
    "reportPath": "./reports/tests/",
    "reportFile": "test-report-sonar.xml"
  }
}
